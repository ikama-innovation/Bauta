<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/assembly/docs</directory>
            <lineEnding>keep</lineEnding>
            <includes>
                <include>*.MD</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/examples</directory>
            <lineEnding>keep</lineEnding>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>/examples</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/home</directory>
            <lineEnding>keep</lineEnding>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>/home</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/start-scripts</directory>
            <lineEnding>keep</lineEnding>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <lineEnding>keep</lineEnding>
            <includes>
                <include>*.jar</include>
                <include>application.yml</include>
            </includes>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <outputDirectory>bin/lib</outputDirectory>
            <unpack>false</unpack>
        </dependencySet>
    </dependencySets>
</assembly>