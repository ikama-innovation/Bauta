<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/assembly/docs</directory>
            <lineEnding>keep</lineEnding>
            <includes>
                <include>*.MD</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/examples/jobs</directory>
            <lineEnding>keep</lineEnding>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>/examples/jobs</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/examples/scripts</directory>
            <lineEnding>keep</lineEnding>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>/examples/scripts</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/home/jobs</directory>
            <lineEnding>keep</lineEnding>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>/bin/home/jobs</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/home/logs</directory>
            <lineEnding>keep</lineEnding>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>/bin/home/logs</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/home/scripts</directory>
            <lineEnding>keep</lineEnding>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>/bin/home/scripts</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/start-scripts</directory>
            <lineEnding>keep</lineEnding>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <lineEnding>keep</lineEnding>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <outputDirectory>bin/lib</outputDirectory>
            <unpack>false</unpack>
        </dependencySet>
    </dependencySets>
</assembly>